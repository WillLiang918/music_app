<h1>Create a Album!</h1>

<%= render "shared/errors" %>

<form action="<%= albums_url %>" method="post">
<%= auth_token %>
<label for="album_name">Album name</label>
<input  type="text"
        name="album[name]"
        id="album_name"
        value="<%= @album.name %>">

<br><br>

<label for="band_name">Band</label>

<select name="album[band_id]">

  <% Band.all.each do |band| %>
    <% if @album.band_id == band.id %>
      <option value="<%= band.name %>" selected><%= band.name %></option>
    <% else %>
      <option value="<%= band.name %>"><%= band.name %></option>
    <% end %>
  <% end %>
</select>


<label for="album_type">Type</label>
<input  type="radio"
        name="album[album_type]"
        id="album_type">Live Album
<input  type="radio"
        name="album[album_type]"
        id="album_type">Studio Album

<br><br>
<input type="submit" value="Create this album!">
</form>
