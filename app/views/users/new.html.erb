<h1>Sign Up!</h1>

<% if flash.now[:errors] %>
  <% flash.now[:errors].each do |error| %>
    <li><%= error %></li><br>
  <% end %>
<% end %>

<form action="/users" method="Post">
  <%= auth_token %>

  <label for="user_email">Email</label>
  <input  type="text"
          name="user[email]"
          id="user_name"
          value "<%= @user.email %>">

  <label for"user_password">Password</label>
  <input  type="password"
          name="user[password]"
          id="user_password">

  <br>

  <input type="submit" value="Create Account!">
</form>
